# Environment Variables for InstaCar API
# Copy these to a .env file in the root of your instacar-api directory

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DATABASE_URL=mysql://root:password@localhost:3306/instacar
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=password
DB_NAME=instacar

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Email Configuration (for nodemailer)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
